body {
    padding-right: 3%;
    padding-left: 3%;

}

#figure {
    text-align: center;
}

.name_figure {
    color: #0088CC;
    font-weight: bold;
    border-top: solid;
    border-color: black;
    padding-top: 1%;
}

.group_figure {
    text-align: left;
}

#carousel{
    margin: auto;
    width: 80%;
}


nav {
    margin: auto;
    text-align: center;
    width: 65%;
}

.navbar-default .navbar-nav {
    margin: auto;
}

.navbar-default .navbar-nav > li > a, .dropdown-menu > li > a {
    color: #0088CC;
}

.navbar-default {
    background-color: white;
    border-color: #E7E7E7;
    border-radius: 10px;
}

#research{
    float: right;
}

.form-control {
    border-radius: 8px;
    margin: 0 1% 0 1%;
}

#title {
    font-weight: bold;
    font-size: 48px;
    border-top: 2px solid black;
    color: white;
    background-color: #0088CC;
    text-align: center;
    margin: auto;
    padding: 1% 1%;
    width: 65%;
    margin-top: 1%;
    margin-bottom: 1%;
}

fieldset {
    border: 2px solid black;
    border-radius: 6px;
    padding: 1%;
    margin: auto;
}

legend {
    color: #0088CC;
    border-bottom: none;
    padding-left: auto;
    padding-right: auto;
    font-weight: bold;
    width: auto;
}

#btn_valid {
    float: right;
    padding: 1%;
    margin-bottom: 1%;
    margin-right: 1%;
    font-weight: bold;
    font-size: 18px;
}

.alert-info {
    margin: auto;
    width: 90%;
    text-align: center;
}

#add_image, #add_video{
    float: left;
    padding: 0.5%;
    margin: 1% 0 1% 0;
}

.del_field{
    padding: 0.5%;
    margin-top: 2%;
}




