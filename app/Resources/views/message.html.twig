<div id="message_figure">

    <div id="messages_form_figure">

        {{ form_start(formMessage, {'attr' : {'id' : 'form_message'}}) }}

        <fieldset>
            <legend>
                Poster un message
            </legend>

            <div class="form-group">
                {{ form_row(formMessage.content) }}
            </div>

            <button type="submit" id="btn_valid_form" class="btn btn-primary">Envoyer</button>

            {{ form_rest(formMessage) }}

        </fieldset>

        {{ form_end(formMessage) }}

    </div>


    <div id="messages_post_figure">

        <span>Messages</span>


        {% if listMessages is not empty %}
            {% for message in listMessages %}

                <div class="message_figure">
                    <div class="message_info_figure">
                        <p class="message_auteur_figure">
                            Pseudo utilisateur <em>Poster le {{ message.datecreate | date("d/m/Y à H:i:s") }}</em>
                        </p>

                    </div>
                    <div class="message_content_figure">
                        {{ message.content }}
                    </div>
                </div>

            {% endfor %}

        {% else %}

            <p id="messages_empty_figure">Aucun message posté</p>

        {% endif %}

        <div id="message_pagination">
            <ul class="pagination">
                {% for p in range(1, nbPages) %}
                    <li{% if p == page %} class="active"{% endif %}>
                        <a class="pagin" href="#">{{ p }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>

    </div>
</div>
